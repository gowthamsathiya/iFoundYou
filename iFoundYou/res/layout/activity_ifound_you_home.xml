<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".IFoundYouHomeActivity" >

    <ImageButton
        android:id="@+id/addFriendImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/find_icon" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/addFriendImageButton"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/addFriendImageButton"
        android:src="@drawable/find_location" />

    <TextView
        android:id="@+id/locationTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/currentLocationTextView"
        android:layout_alignLeft="@+id/addFriendImageButton"
        android:layout_marginBottom="58dp"
        android:text="@string/mylocation"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/currentLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationTitleTextView"
        android:layout_below="@+id/addFriendImageButton"
        android:layout_marginTop="140dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/startServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/currentLocationTextView"
        android:layout_below="@+id/locationTitleTextView"
        android:layout_marginTop="49dp"
        android:onClick="myServiceButtonClickHandler"
        android:text="Button" />

</RelativeLayout>
